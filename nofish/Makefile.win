CC = gcc.exe
LINK = gcc.exe
WINDRES = windres.exe
OBJS = build/obj/main.o build/obj/resources.res
LDFLAGS = -static -L../common/build
LIBS = -lcommon -lws2_32 -lshlwapi -s
BIN = build/nofish.exe
CFLAGS = -I../common/src -Wall -Wextra

all: prepare $(BIN)

prepare:
	@mkdir build\obj

clean:
	@rmdir /s /q build\obj

$(BIN): $(OBJS)
	$(LINK) $(LDFLAGS) $(OBJS) -o "$(BIN)" $(LIBS)

build/obj/%.o: src/%.c
	$(CC) -c $< -o $@ $(CFLAGS)

build/obj/%.res: res/%.rc
	$(WINDRES) $< --input-format=rc -o $@ -O coff
